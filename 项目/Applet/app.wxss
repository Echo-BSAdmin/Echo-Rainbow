/*引入colorui*/
@import "colorui/main.wxss";
@import "colorui/icon.wxss";

.UCenter-bg {
  display: flex;
  justify-content: center;
  flex-direction: column;
  align-items: center;
  position: relative;
  padding-top: 40rpx;
  height: 550rpx;
  overflow: hidden;
  color: #fff;
  font-weight: 300;
  text-shadow: 0 0 3px rgba(0, 0, 0, 0.3);
  background-image: url("http://630sip.echobs.cn/bg.jpeg");
  background-size: cover;
}

.UCenter-bg text {
  opacity: 0.8;
}

.UCenter-bg image {
  width: 200rpx;
  height: 200rpx;
}

.UCenter-bg .gif-wave {
  position: absolute;
  width: 100%;
  bottom: 0;
  left: 0;
  z-index: 99;
  mix-blend-mode: screen;
  height: 100rpx;
}